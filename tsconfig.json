{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "esnext",
    "outDir": "build",
    "sourceMap": false,
    "types": ["jest"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["typings/**/*.d.ts", "src/**/*.ts"]
}
